{
    "manifest_version": 2,
    "name": "Scimago search engine",
    "description": "Adds a search engine that searches scimagojr.com",
    "developer": {
        "name": "Endre MÃ¡rk Borza",
        "url": "https://github.com/chponte/scimagojr-search-engine"
    },
    "version": "1.2",
    "chrome_settings_overrides": {
        "search_provider": {
            "name": "Scimago",
            "search_url": "https://www.scimagojr.com/journalsearch.php?q={searchTerms}",
            "keyword": "scholar",
            "favicon_url": "icons/32.png",
            "is_default": false,
            "encoding": "UTF-8"
        }
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png"
    },
    "web_accessible_resources": [
        "icons/32.png"
    ]
}
